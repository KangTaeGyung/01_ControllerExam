<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

	<formset>
		<form name="sampleVO">
			<field property="name" depends="required">
				<arg0 key="title.sample.name" />
			</field>
			<field property="description" depends="required">
				<arg0 key="title.sample.description" />
			</field>
			<field property="regUser" depends="required">
				<arg0 key="title.sample.regUser" />
			</field>
		</form>

		<form name="deptVO">
			<field property="dname" depends="required">
				<arg0 key="부서명" />
			</field>
			<field property="loc" depends="required">
				<arg0 key="부서위치" />
			</field>
		</form>

		<form name="empVO">
			<field property="ename" depends="required">
				<arg0 key="사원명" />
			</field>
			<field property="job" depends="required">
				<arg0 key="직위" />
			</field>
			<field property="manager" depends="integer">
				<arg0 key="관리자사번" />
			</field>
			<field property="hiredate" depends="required">
				<arg0 key="입사일" />
			</field>
			<field property="salary" depends="integer">
				<arg0 key="월급" />
			</field>
			<field property="commission" depends="integer">
				<arg0 key="상여금" />
			</field>
			<field property="dno" depends="integer">
				<arg0 key="부서번호" />
			</field>
		</form>
	</formset>

</form-validation>